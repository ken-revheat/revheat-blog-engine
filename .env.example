# RevHeat Blog Engine — Environment Variables
# Copy this file to .env and fill in your credentials

# WordPress (Required)
WP_URL=https://revheat.com
WP_USERNAME=your-wordpress-username
WP_APP_PASSWORD=your-application-password

# Anthropic Claude API (Required for content generation)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Reddit API (Optional — falls back to RSS if not configured)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=
REDDIT_USER_AGENT=revheat-monitor/1.0

# Image Compression (Optional — falls back to Pillow)
SHORTPIXEL_API_KEY=

# Google Indexing API (Optional)
GOOGLE_SERVICE_ACCOUNT_JSON=

# Email Notifications (Optional — falls back to file output)
NOTIFICATION_EMAIL=kglundin@gmail.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
