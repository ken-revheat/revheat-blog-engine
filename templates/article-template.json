{
  "@type": "Article",
  "@id": "{{ post_url }}#article",
  "isPartOf": { "@id": "{{ post_url }}" },
  "author": {
    "@type": "Person",
    "@id": "https://revheat.com/#person",
    "name": "Ken Lundin",
    "jobTitle": "Founder & CEO",
    "url": "https://revheat.com/about/",
    "worksFor": {
      "@type": "Organization",
      "@id": "https://revheat.com/#organization"
    }
  },
  "headline": {{ post_title | tojson }},
  "description": {{ meta_description | tojson }},
  "datePublished": "{{ publish_date_iso }}",
  "dateModified": "{{ modified_date_iso }}",
  "mainEntityOfPage": { "@id": "{{ post_url }}" },
  "wordCount": {{ word_count }},
  "articleSection": {{ (article_section or "Sales Optimization") | tojson }},
  "timeRequired": "{{ time_required or 'PT5M' }}",
  "publisher": {
    "@type": "Organization",
    "@id": "https://revheat.com/#organization",
    "name": "RevHeat",
    "url": "https://revheat.com",
    "logo": {
      "@type": "ImageObject",
      "url": "https://revheat.com/wp-content/uploads/2025/09/image-removebg-preview-2.png"
    }
  },
  "image": {
    "@type": "ImageObject",
    "url": "{{ featured_image_url }}"
  },
  "keywords": {{ keywords | tojson }},
  "about": {
    "@type": "Thing",
    "name": {{ primary_topic | tojson }},
    "description": {{ topic_description | tojson }}
  },
  "speakable": {
    "@type": "SpeakableSpecification",
    "cssSelector": {{ (speakable_selectors or ["#tldr", ".article-summary"]) | tojson }}
  },
  "inLanguage": "en-US"
}
